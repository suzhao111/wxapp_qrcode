/* pages/card/card.wxss */
.main {
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom: 0;
  margin: 10rpx auto;
  width: 600rpx;
  height: 400rpx;
}
.card {
  position: absolute;
  top:0;
  left:0;
  transition: all 1s;
  /* 不显示背面 */
  backface-visibility: hidden;
  width: 600rpx;
  height: 400rpx;
  border-radius: 10rpx;
  cursor: pointer;
  border: 2rpx solid red;
}
