.container {
  background: #cccccc;
  opacity: 0.9;
  height: 100vh;
}
.container text {
  font-size: 36rpx;
  color: #333;
  margin: 30rpx auto 18rpx;
}
.container .img-box {
  text-align: center;
}
.container .img-box image {
  width: 350rpx;
  height: 350rpx;
}
.container canvas {
  margin: 0 auto;
}
.container .btns {
  margin-top: 50rpx;
  width: 600rpx;
  display: flex;
  justify-content: space-around;
}
.container .tip {
  margin-top: 50rpx;
  font-size: 36rpx;
  color: #333;
}
